<% layout("/layouts/boilerplate") %>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10">
      <h3 class="text-center mb-4"><b><%=listing.title%></b></h3>
    </div>

    <div class="col-12 col-md-8">
      <div class="card listing-card shadow-sm">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top img-fluid show-img"
          alt="listing_image"
          style="max-height: 400px; object-fit: cover;"
        />
        <div class="card-body">
          <p class="card-text">
            <b>Owner :</b>
            <i><%= listing.owner.username %></i>
          </p>
          <p class="card-text">
            <b>Description :</b> <%=listing.description %>
          </p>
          <p class="card-text">
            <b>Price :</b> &#8377;<%=listing.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text"><b>Location :</b> <%=listing.location %></p>
          <p class="card-text"><b>Country :</b> <%=listing.country %></p>
          <p class="card-text"><b>Category :</b> <%=listing.category %></p>
        </div>
      </div>
    </div>
  </div>

  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="d-flex justify-content-center gap-3 mt-3">
    <form action="/listings/<%=listing._id%>/edit" method="get">
      <button class="btn btn-outline-dark edit-btn">Edit</button>
    </form>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>

  <hr class="my-4" />

  <% if (currUser) { %>
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%=listing._id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            class="form-control"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please submit some comment for review
          </div>
        </div>
        <div class="d-grid">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <% } %>

  <% if(listing.reviews.length > 0) { %>
  <div class="row justify-content-center mt-4">
    <div class="col-12 col-md-10">
      <h4>All Reviews</h4>
      <div class="row">
        <% for (review of listing.reviews) { %>
        <div class="col-12 col-sm-6 col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><%= review.comment %></p>
            </div>
            <form
              action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
              method="post"
              class="m-3"
            >
              <button class="btn btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>
</div>
